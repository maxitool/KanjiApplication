<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ImageBlockFragment">

    <RelativeLayout
        android:id="@+id/relativeLayoutImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp">

            <LinearLayout
                android:id="@+id/linearLayoutImages1"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageKanji1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:scaleType="fitXY"
                    tools:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imageKanji2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:scaleType="fitXY"
                    tools:src="@tools:sample/avatars" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutImages2"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_below="@+id/linearLayoutImages1">

                <ImageView
                    android:id="@+id/imageKanji3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:scaleType="fitXY"
                    tools:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imageKanji4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:scaleType="fitXY"
                    tools:src="@tools:sample/avatars" />
            </LinearLayout>

        <TextView
            android:id="@+id/textNameGroup"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayoutImages2"
            android:gravity="center"
            android:textSize="20dp"
            android:text="TextView" />

    </RelativeLayout>

</FrameLayout>