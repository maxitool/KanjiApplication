<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ImageBlockFragment">

    <RelativeLayout
        android:id="@+id/relativeLayouImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/tableImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageKanji1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="15dp"
                    android:scaleType="fitXY"
                    tools:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imageKanji2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="15dp"
                    android:scaleType="fitXY"
                    tools:src="@tools:sample/avatars" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageKanji3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="15dp"
                    android:scaleType="fitXY"
                    tools:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imageKanji4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="15dp"
                    android:scaleType="fitXY"
                    tools:src="@tools:sample/avatars" />
            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/textNameGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableImages"
            android:gravity="center"
            android:textSize="20dp"
            android:text="TextView" />

    </RelativeLayout>

</FrameLayout>