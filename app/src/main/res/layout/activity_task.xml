<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskActivity"
    tools:layout_editor_absoluteY="81dp"
    android:background="@color/my_green">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp">

            <TableRow android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_blue_900"
                    android:text="Word"
                    android:textAllCaps="true"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textViewWord"
                    android:layout_width="219dp"
                    android:layout_height="wrap_content"
                    android:text="いり口"
                    android:textSize="24sp" />

            </TableRow>

            <TableRow android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Furigana"
                    android:textAllCaps="true"
                    android:textColor="@color/light_blue_900"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textViewFurigana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="いりぐち"
                    android:textSize="24sp" />

            </TableRow>

            <TableRow android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Romanji"
                    android:textAllCaps="true"
                    android:textColor="@color/light_blue_900"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textViewRomanji"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:text="iriguchi"
                    android:textSize="24sp" />

            </TableRow>

            <TableRow android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="177dp"
                    android:layout_height="wrap_content"
                    android:text="Translation"
                    android:textAllCaps="true"
                    android:textColor="@color/light_blue_900"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textViewTranslation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:text="вход" />

            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_blue_900"
                android:text="Draw the kanji"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_marginBottom="10dp" />

            <FrameLayout
                android:id="@+id/frameLayoutTask"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:background="@color/cardview_shadow_end_color"/>

        </TableLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:layout_marginVertical="10dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/buttonCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check"
                android:layout_alignParentLeft="true"/>

            <Button
                android:id="@+id/buttonNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_centerInParent="true"/>

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>